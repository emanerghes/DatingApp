@model IEnumerable<DattingApp_FinalApp.Models.PostModel>

@{
    ViewData["Title"] = "UserPost";
}
<style>
    span.a {
        display: inline; /* the default for span */
        width: 100px;
        height: 100px;
        padding: 5px;
        border: 1px solid blue;
        background-color: yellow;
    }

    span.b {
        display: inline-block;
        width: 100px;
        height: 100px;
        padding: 5px;
        border: 1px solid blue;
        background-color: yellow;
    }

    span.c {
        display: block;
        width: 100px;
        height: 100px;
        padding: 5px;
        border: 1px solid blue;
        background-color: yellow;
    }
</style>
<body>
    <h1>Feed</h1>

 
    <table class="table">

        <tbody>

            @foreach (var item in Model)
            {

                <div style="  display: grid
  width: 900px;
  height: 500px;
  padding: 10px;
  border: 1px solid red;
  background-color: floralwhite;
  margin-right: 14px;
  margin-bottom: 20px;
  color: deeppink;
margin-left:20%;
margin-right:20%

">
                <span>
                    <div>
                        <p> Post by   @Html.DisplayFor(modelItem => item.UserEmail).</p>
                        @Html.DisplayFor(modelItem => item.About)
                        <img class="rounded-circle" src="@item.Photo" style="max-width: 250px" />
                    </div>






                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
               <br>
                    </span>

                </div>
            }
        </tbody>


</body>
