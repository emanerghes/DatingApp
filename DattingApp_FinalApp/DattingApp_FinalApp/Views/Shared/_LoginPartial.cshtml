@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (User.Identity.Name == "Admin12@yahoo.com")
    {

        <li>
            <a asp-area="" asp-controller="Profile" asp-action="Index">Profiles</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Post" asp-action="Index">Posts</a>
        </li>
         <li>
            <a asp-area="" asp-controller="Like" asp-action="Index">Likes</a>
        </li>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    }
    else

